<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <developer.shivam.crescento.CrescentoImageView
        android:id="@+id/iv_movie_bg_poster"
        android:layout_width="match_parent"
        android:layout_height="276dp"
        app:crescentoTintAlpha="0"
        app:crescentoTintColor="@android:color/transparent"
        app:crescentoTintMode="manual"
        app:curvature="40dp"
        app:curvatureDirection="outward"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />


    <ImageView
        android:id="@+id/iv_movie_poster"
        android:layout_width="133dp"
        android:layout_height="180dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="236dp"
        android:scaleType="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_movie_bg_poster"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/tv_movie_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintLeft_toRightOf="@id/iv_movie_poster"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_movie_poster"
        tools:text="The secret life of PI"

        />

    <me.cristiangomez.popularmovies.ui.view.RatingsView
        android:id="@+id/rating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@id/iv_movie_poster"
        app:layout_constraintRight_toRightOf="parent"
        android:numStars="5"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_title" />

    <Button
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:text="Mark as Favorite"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_release_date"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@id/rating"
        app:layout_constraintTop_toBottomOf="@id/rating"
        tools:text="2016" />

</android.support.constraint.ConstraintLayout>